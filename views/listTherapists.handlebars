<div class="col-md-6 offset-md-3 thumbnail card p-4">
    {{#if therapists}}
        {{#each therapists}}
            {{#unless @first}}
                <hr>
            {{/unless}}
            <div class="row">
                <div class="col-md-9">
                    <p><a href="/therapist/{{this.0._id}}">{{this.0.name}}</a></p>
                    {{#if this.0.averageRating}}
                        <p>{{this.0.averageRating}}/5</p>
                        <div class="stars">{{#stars this.0.averageRating}}{{/stars}}</div>
                    {{/if}}
                </div>
                <div class="col-md-2">
                    <input type="button" class="btn btn-outline-info mt-4" value="Review" />
                </div>
            </div>
        {{/each}}
    {{else}}
        <p class="text-muted">Can't find any therapists by that name! Would you like to <strong>add a therapist?</strong></p>
        <a href="/add" class="btn btn-success">Add Therapist</a>

    {{/if}}
</div>